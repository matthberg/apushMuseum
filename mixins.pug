mixin item(title,src,year,country,where)
 figure.museumItem
  img(src="./img/"+src,alt=title)
  figcaption
   h3= title
   ul.caps
    if year
     li
      b Year: #{year}
    if country
     li
      b Country: #{country}
    if where
     li
      b In Museum: #{where}
   block

mixin section(title)
 section(id=title)
  a(href="#"+title).idLink #
  h2.inline= title
  block

mixin cite(source)
 -name = source.split(' ')[0];
 -name = name.charAt(0).toUpperCase() + name.slice(1);
 cite (
  a(href="#cite"+name)= source
  |)
  
  
//- Author. Title of Site. Sponsor, Date created (use n.d. if not given). Medium. Date accessed.
mixin bibliography(sources)
 ul
  for source in sources
   -if(source.author){name = source.author[1]} else if(source.title){name = source.title.split(' ')[0]};
   -name = name.charAt(0).toUpperCase() + name.slice(1);
   li(id="cite"+name)
    if source.author
     |#{source.author[1]}, #{source.author[0]}. 
    if source.title
     i #{source.title}. 
    if source.sponsor
     |#{source.sponsor}, 
    if source.date
     |#{source.date}. 
    else
     |n.d. 
    |Web.